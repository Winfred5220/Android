<?xml version="1.0" encoding="utf-8"?><!--HUB倉簽收列表適配器-->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_list_no"
            android:layout_height="@dimen/dimen_40"
            android:layout_width="@dimen/dimen_40"
            android:layout_marginTop="@dimen/dimen_15"
            android:layout_marginLeft="@dimen/dimen_14"
            android:textColor="@color/color_303030"
            style="@style/crossTextName"
            android:text="編號"
            />

        <LinearLayout
            android:id="@+id/ll_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="單號"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-05-06"
                    android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="品名"
                    android:textColor="@color/color_303030"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="390"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:textColor="@color/color_ff552e"
                    android:textSize="16sp"
                    android:textStyle="bold"/>


            </LinearLayout>
        </LinearLayout>

            <!--<ImageView-->
                <!--android:id="@+id/iv_applyer"-->
                <!--android:layout_alignRight="@id/ll_goods"-->
                <!--android:scaleType="centerCrop"-->
                <!--android:layout_marginRight="@dimen/dimen_2"-->
                <!--android:layout_marginTop="@dimen/dimen_2"-->
                <!--android:layout_width="@dimen/dimen_58"-->
                <!--android:layout_height="@dimen/dimen_58"/>-->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#F5F5DC"
                    android:layout_below="@id/ll_goods"
                    android:layout_marginTop="5dp"
                    />
    </RelativeLayout>