<?xml version="1.0" encoding="utf-8"?><!--巡檢進度列表 item-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll_route_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60"
            android:orientation="horizontal">
            <!--狀態顯示-->
            <ImageView
                android:id="@+id/iv_round"
                android:layout_width="@dimen/dimen_15"
                android:layout_height="@dimen/dimen_15"
                android:layout_margin="@dimen/dimen_5"
                android:paddingLeft="@dimen/dimen_4"
                android:layout_centerVertical="true"
                android:background="@drawable/route_status_round" />
            <!--名稱-->
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_35"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="@dimen/dimen_20"
                android:text="dffgdfsdfasdfasdf"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_18"
                android:layout_toRightOf="@+id/iv_round"
                android:layout_toLeftOf="@+id/tv_count"/>
            <!--次數-->
            <TextView
                android:id="@+id/tv_count"
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_35"
                android:layout_marginRight="@dimen/dimen_10"
                android:gravity="center_vertical"
                android:text="dffg"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_858585" />
    </LinearLayout>
    <!--查看-->
    <TextView
        android:id="@+id/tv_see"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="#FFFF0000"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="查看"
        android:textColor="@android:color/white" />
    <!--分割線-->
    <View
        android:layout_width="@dimen/dimen_1"
        android:layout_height="match_parent"
        android:background="@color/result_view" />
    <!--添加-->
    <TextView
        android:id="@+id/tv_add"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="#FFFF0000"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="添加"
        android:textColor="@android:color/white" />
</LinearLayout>