<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll_route_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60"
            android:orientation="horizontal">
            <!--編號-->
            <TextView
                android:id="@+id/tv_no"
                android:layout_width="@dimen/dimen_25"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dimen_4"
                android:text="ddd"
                android:singleLine="true"/>

            <LinearLayout
                android:id="@+id/ll_message"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30"
                android:layout_toRightOf="@+id/tv_no"
                android:orientation="horizontal">
                <!--房間-->
                <TextView
                    android:id="@+id/tv_room"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dimen_8"
                    android:text="302"
                    android:textSize="@dimen/text_size_18" />
                <!--床號-->
                <TextView
                    android:id="@+id/tv_bed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_weight="1.2"
                    android:gravity="center_vertical"
                    android:text="01" />
                <!--姓名-->
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_weight="1.2"
                    android:gravity="center_vertical"
                    android:text="張三丰" />
                <!--巡檢日期-->
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="2020-10-15"
                    android:singleLine="true"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_result"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30"
                android:layout_below="@+id/ll_message"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_toRightOf="@+id/tv_no"
                android:gravity="center_vertical"
                android:text="kkkkk" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_858585" />
    </LinearLayout>
    <!--查看-->
    <TextView
        android:id="@+id/tv_see"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="#FFFF0000"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="查看"
        android:textColor="@android:color/white" />

</LinearLayout>