<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/bg_hub"
              android:orientation="vertical">
    <include layout="@layout/common_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen_15"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_before"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="2"
                android:background="@color/color_009adb"
                android:text="前一天"
                android:textColor="@color/color_f8f7f7"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/dimen_2"
                android:layout_marginRight="@dimen/dimen_2"
                android:layout_weight="1"
                android:background="@drawable/login"
                android:gravity="center"
                android:hint="選擇時間"
                android:textSize="@dimen/text_size_16"/>

            <Button
                android:id="@+id/btn_after"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="2"
                android:background="@color/color_009adb"
                android:text="後一天"
                android:textColor="@color/color_f8f7f7"
                android:textSize="14dp"/>
        </LinearLayout>
        <!--用户名输入框-->
        <RelativeLayout
            android:id="@+id/name_input_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/login"
                android:focusable="true"
                android:hint="請輸入姓名"
                android:inputType="text"
                android:paddingLeft="@dimen/dimen_4"
                android:textColorHint="@color/action_sheet_curr_point"
                android:textSize="16sp"/>
            <!--清空用户名按钮-->
            <Button
                android:id="@+id/btn_clear"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:alpha="0"
                android:background="@drawable/delete_login"
                android:gravity="center"/>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_selt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/color_009adb"
            android:text="查 詢"
            android:textColor="@color/color_f8f7f7"
            android:textSize="18dp"/>
    </LinearLayout>
</LinearLayout>