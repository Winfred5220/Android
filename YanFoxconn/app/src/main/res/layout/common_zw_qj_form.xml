<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--工號-->
        <TableRow style="@style/tableRow">
            <TextView

                style="@style/carTextName"
                android:text="工號："/>
            <TextView
               android:lines="1"
                android:id="@+id/tv_id"
                style="@style/carTextBKG"
                android:layout_weight="1"/>


        </TableRow>
        <!--姓名-->
        <TableRow style="@style/tableRow">

            <TextView
                style="@style/carTextName"
                android:text="姓名："/>

            <TextView
                android:id="@+id/tv_name"
                style="@style/carTextBKG"
                android:layout_weight="1" />
        </TableRow>
        <!--课组-->
        <TableRow style="@style/tableRow">

            <TextView
                style="@style/carTextName"
                android:text="课组：" />

            <TextView
                android:id="@+id/tv_gname"
                style="@style/carTextBKG"
                android:layout_weight="1" />
        </TableRow>
        <!--岗位-->
        <TableRow style="@style/tableRow">

            <TextView
                style="@style/carTextName"
                android:text="岗位：" />

            <TextView
                android:id="@+id/tv_gpost"
                style="@style/carTextBKG"
                android:layout_weight="1" />
        </TableRow>
        <!--开始時間-->
        <TableRow style="@style/tableRow">
            <TextView
                style="@style/forkliftTextName"
                android:text="开始時間："/>
            <TextView
                android:id="@+id/tv_start_date"
                style="@style/mobile_message"
                android:layout_weight="1"
                android:background="@drawable/login_input"
                android:hint="選擇時間"/>
        </TableRow>
        <!--结束時間-->
        <TableRow style="@style/tableRow">
            <TextView
                style="@style/forkliftTextName"
                android:text="结束時間："/>
            <TextView
                android:id="@+id/tv_end_date"
                style="@style/mobile_message"
                android:layout_weight="1"
                android:background="@drawable/login_input"
                android:hint="選擇時間"/>
        </TableRow>
        <!--请假时常-->
        <TableRow style="@style/tableRow">

            <TextView
                android:id="@+id/textView4"
                style="@style/carTextName"
                android:text="请假时常："/>

            <TextView
                android:id="@+id/tv_time"
                style="@style/carTextBKG"
                android:layout_weight="1" />

        </TableRow>
        <!--班别-->
        <TableRow style="@style/tableRow">

            <TextView
                style="@style/carTextName"
                android:text="班别："/>

            <TextView
                android:id="@+id/tv_class"
                style="@style/carTextBKG"
                android:layout_weight="1" />

        </TableRow>
        <!--请假原因-->
        <TableRow
            android:id="@+id/tr_reason"
            style="@style/tableRow">

            <TextView style="@style/carTextName"
                android:text="请假原因："/>

            <TextView
                android:id="@+id/tv_reason"
                style="@style/carTextBKG"
                android:maxLength="25"
                android:layout_height="@dimen/dimen_60"
                android:layout_weight="1" />

        </TableRow>
    </TableLayout>
<LinearLayout
    android:id="@+id/ll_tv_btn"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_40"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dimen_10">

    <TextView
        android:id="@+id/tv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_50"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@color/color_00CCFF"
        android:text="签核"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_20" />

    <TextView

        android:gravity="center"
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退件"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_20"
        android:background="@color/color_00CCFF"
        android:layout_marginLeft="@dimen/dimen_50"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_weight="1"/>

</LinearLayout>
<RelativeLayout
    android:id="@+id/rl_statue"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_15">
    <TextView
        style="@style/carTextName"
        android:id="@+id/tv_statue"
        android:text=""
        android:textSize="@dimen/text_size_20"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_zg_name"
        android:text=""
        android:textSize="@dimen/text_size_20"
        android:layout_below="@+id/tv_statue"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_zg_date"
        android:text=""
        android:textSize="@dimen/text_size_20"
        android:layout_below="@+id/tv_statue"
        android:layout_alignParentRight="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_zg_reason"
        android:text=""
        android:textSize="@dimen/text_size_20"
        android:layout_below="@+id/tv_zg_name"/>
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_3"
        android:background="@color/action_sheet_curr_point"/>
</LinearLayout>