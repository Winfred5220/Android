<?xml version="1.0" encoding="utf-8"?><!--人工跨區無紙化界面-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--標題-->
    <include layout="@layout/common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dimen_4"
            android:orientation="vertical">

            <!--300掃描提示顯示-->
            <TextView
                android:id="@+id/tv_show"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30"
                android:layout_marginTop="@dimen/dimen_2"
                android:background="@color/possible_result_points"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_16"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2"
                android:orientation="horizontal">

                <TextView
                    style="@style/carTextName"
                    android:text="單號：" />

                <TextView
                    android:id="@+id/tv_packing_no"
                    style="@style/carTextBKG" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2"
                android:orientation="horizontal">

                <TextView
                    style="@style/carTextName"
                    android:text="流向：" />

                <TextView
                    android:id="@+id/tv_flow_to"
                    style="@style/carTextBKG"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2"
                android:orientation="horizontal">

                <TextView
                    style="@style/carTextName"
                    android:text="出發地：" />

                <TextView
                    android:id="@+id/tv_start_name"
                    style="@style/carTextBKG"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2"
                android:orientation="horizontal">

                <TextView
                    style="@style/carTextName"
                    android:text="目的地：" />

                <TextView
                    android:id="@+id/tv_end_name"
                    style="@style/carTextBKG"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2"
                android:orientation="horizontal">

                <TextView
                    style="@style/carTextName"
                    android:text="種類：" />

                <TextView
                    android:id="@+id/tv_type"
                    style="@style/carTextBKG"
                    android:layout_weight="1" />

                <TextView
                    style="@style/carTextName"
                    android:text="件數：" />

                <TextView
                    android:id="@+id/tv_num"
                    style="@style/carTextBKG"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2"
                android:orientation="horizontal">

                <TextView
                    style="@style/carTextName"
                    android:text="攜帶者：" />

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/carTextBKG"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    style="@style/crossTextName"
                    android:layout_weight="2"
                    android:text="編號" />

                <TextView
                    style="@style/crossTextName"
                    android:layout_weight="1"
                    android:text="品名" />

                <TextView
                    style="@style/crossTextName"
                    android:layout_weight="2"
                    android:text="數量" />

                <TextView
                    style="@style/crossTextName"
                    android:layout_weight="2"
                    android:text="單位" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:background="@color/color_858585"/>

            <ListView
                android:id="@+id/lv_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!--確認按钮-->
            <Button
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"
                android:layout_marginTop="15dp"
                android:background="@color/color_009adb"
                android:text="確認"
                android:textColor="@color/color_ffdedede"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>