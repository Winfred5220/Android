<?xml version="1.0" encoding="utf-8"?>
<!--專案列表 item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll_route_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30"
                android:orientation="horizontal">
                <TextView
                    android:text="專案名稱"
                    android:textColor="@color/color_74afdb"
                    android:textSize="@dimen/text_size_18"
                    android:paddingLeft="@dimen/dimen_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <!--專案名稱-->
                <TextView
                    android:id="@+id/tv_case_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_30"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_count"
                    android:layout_toRightOf="@+id/iv_round"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dimen_10"
                    android:text="case name"
                    android:textSize="@dimen/text_size_18"/>

            </LinearLayout>
            <TextView
                android:id="@+id/tv_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/color_74afdb"
                android:paddingLeft="@dimen/dimen_20"
                android:ellipsize="none"
                android:text="位置"
                android:layout_below="@+id/ll"/>
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_18"
                android:paddingLeft="@dimen/dimen_10"
                android:layout_toRightOf="@+id/tv_addr"
                android:ellipsize="none"
                android:text="address"
                android:layout_below="@+id/ll"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/color_858585" />
    </LinearLayout>
    <!--查看隱患-->
    <TextView
        android:id="@+id/tv_let_go"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="#FFFF0000"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="查看"
        android:textColor="@android:color/white" />
    <!--分割線-->
    <View
        android:layout_width="@dimen/dimen_1"
        android:layout_height="match_parent"
        android:background="@color/result_view" />
    <!--添加隱患-->
    <TextView
        android:id="@+id/tv_up_photo"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="#FFFF0000"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="添加"
        android:textColor="@android:color/white" />
</LinearLayout>