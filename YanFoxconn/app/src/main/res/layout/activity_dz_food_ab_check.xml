<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.DZFoodAbCheckActivity"
    android:orientation="vertical">
<include layout="@layout/common_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow style="@style/retreattableRow">

                    <TextView
                        style="@style/retreatTextName"
                        android:text="餐廳名稱"/>

                    <TextView
                        android:layout_weight="5.2"
                        android:id="@+id/tv_name"
                        style="@style/retreat_message"
                        />

                </TableRow>
                <TableRow style="@style/retreattableRow">

                    <TextView
                        style="@style/retreatTextName"
                        android:text="時間"/>

                    <TextView
                        android:layout_weight="5.2"
                        android:id="@+id/tv_time"
                        style="@style/retreat_message"
                        />

                </TableRow>
                <TableRow style="@style/retreattableRow">

                    <TextView
                        style="@style/retreatTextName"
                        android:text="類別1"/>
                    <TextView
                        android:layout_weight="5.2"
                        android:id="@+id/tv_type1"
                        style="@style/retreat_message"
                        />
                </TableRow>
                <TableRow style="@style/retreattableRow">

                    <TextView
                        style="@style/retreatTextName"
                        android:text="類別2"/>
                    <TextView
                        android:layout_weight="5.2"
                        android:id="@+id/tv_type2"
                        style="@style/retreat_message"
                        />
                </TableRow>
                <TableRow style="@style/retreattableRow">

                    <TextView
                        style="@style/retreatTextName"
                        android:text="類別3"/>
                    <TextView
                        android:layout_weight="5.2"
                        android:id="@+id/tv_type3"
                        style="@style/retreat_message"
                        />
                </TableRow>
                <TableRow style="@style/retreattableRow">

                    <TextView
                        style="@style/retreatTextName"
                        android:text="扣分"/>

                    <TextView
                        android:layout_weight="5.2"
                        android:id="@+id/tv_score"
                        style="@style/retreat_message"
                        />

                </TableRow>
                <TableRow style="@style/retreattableRow">

                    <TextView
                        style="@style/retreatTextName"
                        android:text="異常描述"/>

                    <TextView
                        android:layout_weight="5.2"
                        android:id="@+id/tv_desp"
                        style="@style/retreat_message"
                        />

                </TableRow>
            </TableLayout>

            <LinearLayout
                android:id="@+id/ll_get_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/tv_description"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>