<?xml version="1.0" encoding="utf-8"?><!--班導输入輸入工號/身份證號頁面-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--標題-->
    <include layout="@layout/common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_hub"
        android:orientation="vertical">
        <!--輸入工號/身份證號-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_200">

            <EditText
                android:id="@+id/et_input_num"
                style="@style/input_box"
                android:hint="輸入工號/身份證號"
                android:inputType="text"
                android:maxLength="18"
                android:paddingLeft="@dimen/dimen_5" />

            <!--扫描按钮-->
            <ImageButton
                android:id="@+id/btn_scan_brand"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dimen_25"
                android:layout_marginRight="20dp"
                android:background="@color/color_74afdb"
                android:scaleType="fitCenter"
                android:src="@mipmap/asy" />
        </RelativeLayout>
        <!--提交按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_up"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_15"
                android:layout_weight="1"
                android:background="@color/color_009adb"
                android:text="提 交"
                android:textColor="@color/color_ffdedede"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>