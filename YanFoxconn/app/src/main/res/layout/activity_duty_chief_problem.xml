<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <!--標題-->
    <include layout="@layout/common_title"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="日期/時間"
                    android:textSize="18dp"/>
            <TextView
                android:id="@+id/tv_time"
                style="@style/mobile_message"
                android:layout_weight="1"
                android:background="@drawable/login_input"
                android:hint="選擇時間"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:text="崗位位置"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/et_position"
                android:paddingLeft="@dimen/dimen_4"
                android:layout_weight="1"
                style="@style/carEditTextBKG"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_list_gate"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:textSize="18dp"/>
            <com.example.administrator.yanfoxconn.widget.MyListView
                android:id="@+id/lv_gate"
                style="@style/carTextBKG"
                android:layout_weight="1" />
        </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="巡崗狀況"
            android:textSize="18dp"/>
        <EditText
            android:id="@+id/et_condition"
            android:paddingTop="@dimen/dimen_4"
            android:hint="不超過30字"
            android:textColorHint="@color/color_e84e4e"
            android:gravity="left"
            android:maxLength="30"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@drawable/indus_form"
            android:paddingLeft="@dimen/dimen_4"/>
        <LinearLayout
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:text="責任人"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/et_person"
                android:paddingLeft="@dimen/dimen_4"
                android:background="@drawable/login_input"
                android:layout_weight="1"
                style="@style/carEditTextBKG"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:text="責任課隊"
                android:textSize="18dp"/>
            <Spinner
                android:id="@+id/sp_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:text="責任隊長"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/et_captain"
                android:paddingLeft="@dimen/dimen_4"
                android:background="@drawable/login_input"
                android:layout_weight="1"
                style="@style/carEditTextBKG"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginBottom="@dimen/dimen_20"
            android:background="@color/color_009adb"
            android:text="提 交"
            android:textColor="@color/color_f8f7f7"
            android:textSize="18dp"/>

    </LinearLayout>
</ScrollView>
</LinearLayout>