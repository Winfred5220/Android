<?xml version="1.0" encoding="utf-8"?>
<!--110接處警 警情通報-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">
<!--標題-->
    <include layout="@layout/common_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--工號-->
            <TableRow style="@style/tableRow">

                <TextView
                    style="@style/carTextName"
                    android:lines="1"
                    android:text="報警方式：" />
                <RadioGroup
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <RadioButton
                        android:id="@+id/rb_in"
                        android:text="內線"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/rb_out"
                        android:text="外線"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RadioGroup>
            </TableRow>
            <!--報案日期-->
            <TableRow style="@style/tableRow">
                <TextView
                    style="@style/forkliftTextName"
                    android:text="報案日期："/>
                <TextView
                    android:id="@+id/tv_date"
                    style="@style/mobile_message"
                    android:layout_weight="1"
                    android:background="@drawable/login_input"
                    android:hint="選擇時間"/>
            </TableRow>
            <!--警情位置-->
            <TableRow
                android:id="@+id/tr_position"
                style="@style/tableRow">
                <TextView style="@style/carTextName"
                    android:text="警情位置:"/>
                <Spinner
                    android:id="@+id/sp_area"
                    android:layout_width="0dp"
                    android:background="@drawable/login_input"
                    android:layout_height="@dimen/dimen_30"
                    android:layout_weight="0.5" />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/dimen_14"
                    android:text="區"/>
                <EditText
                    android:id="@+id/et_position"
                    android:layout_width="0dp"
                    android:background="@drawable/login_input"
                    style="@style/carEditTextBKG"
                    android:maxLength="25"
                    android:layout_weight="1" />
            </TableRow>
            <!--聯繫方式-->
            <TableRow
                android:id="@+id/tr_phone"
                style="@style/tableRow">
                <TextView style="@style/carTextName"
                    android:text="聯繫方式:"/>

                <EditText
                    android:id="@+id/et_phone"
                    style="@style/carEditTextBKG"
                    android:inputType="number"
                    android:maxLength="25"
                    android:background="@drawable/login_input"
                    android:layout_weight="1" />
            </TableRow>
            <!--報警內容-->
            <TableRow
                android:id="@+id/tr_content"
                style="@style/tableRow">
                <TextView style="@style/carTextName"
                    android:text="報警內容:"/>

                <EditText
                    android:id="@+id/et_content"
                    style="@style/carEditTextBKG"
                    android:background="@drawable/login_input"
                    android:maxLength="25"
                    android:layout_weight="1" />
            </TableRow>
            <!--指揮中心處置-->
            <TableRow style="@style/tableRow">

                <TextView
                    style="@style/carTextName"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="中心處置：" />

                <EditText
                    android:id="@+id/et_gate_post"
                    style="@style/carEditTextBKG"
                    android:background="@drawable/login_input"
                    android:layout_weight="1" />
            </TableRow>
            <!--指揮中心處置-->
            <TableRow
                android:id="@+id/tr_list_gate"
                style="@style/tableRow"
                android:visibility="gone">

                <TextView style="@style/carTextName" />

                <com.example.administrator.yanfoxconn.widget.MyListView
                    android:id="@+id/lv_gate"
                    style="@style/carTextBKG"
                    android:layout_weight="1" />
            </TableRow>

        </TableLayout>

    </ScrollView>
</LinearLayout>