<?xml version="1.0" encoding="utf-8"?><!--值班科長稽核問題列表 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_160"
            android:layout_margin="@dimen/dimen_8"
            android:background="@drawable/login_input"
            android:orientation="vertical"
            android:padding="@dimen/dimen_8">

                <TextView
                    android:id="@+id/tv_time"
                    style="@style/crossTextName"
                    android:text="時間"
                    />

                <TextView
                    android:id="@+id/tv_position"
                    style="@style/crossTextName"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:text="位置"
                    />

                <TextView
                    android:id="@+id/tv_content"
                    style="@style/crossTextName"
                    android:paddingLeft="@dimen/dimen_4"
                    android:background="@color/color_eeeeee"
                    android:layout_height="@dimen/dimen_60"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:gravity="left"
                    android:text="content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8">

                        <TextView
                            android:id="@+id/textView7"
                            style="@style/crossTextName"
                            android:textColor="@color/color_009adb"
                            android:layout_weight="0.98"
                            android:text="責任人："/>

                        <TextView
                            android:id="@+id/tv_team"
                            style="@style/crossTextName"
                            android:layout_weight="0.9"
                            android:text="科隊"/>

                        <TextView
                            android:id="@+id/tv_name"
                            style="@style/crossTextName"
                            android:layout_weight="1"
                            android:text="姓名"/>

                        <TextView
                            style="@style/crossTextName"
                            android:layout_weight="1"
                            android:textColor="@color/color_009adb"
                            android:text="隊長："/>

                        <TextView
                            android:id="@+id/tv_captain_name"
                            style="@style/crossTextName"
                            android:layout_weight="1"
                            android:text="姓名"/>
                </LinearLayout>
        </LinearLayout>

</LinearLayout>