<?xml version="1.0" encoding="utf-8"?>
<!--人資監餐 異常提交-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DZFoodAbUpActivity"
    android:orientation="vertical">
<!--標題-->
    <include layout="@layout/common_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow style="@style/retreattableRow">

                    <TextView
                        style="@style/retreatTextName"
                        android:text="餐廳名稱"/>

                    <TextView
                        android:layout_weight="5.2"
                        android:id="@+id/tv_name"
                        style="@style/retreat_message"
                        />

                </TableRow>

                <TableRow style="@style/retreattableRow">

                    <TextView
                        style="@style/retreatTextName"
                        android:text="類別1"/>
                    <Spinner
                        android:id="@+id/sp_type1"
                        android:layout_weight="5.2"
                        style="@style/spinner">
                    </Spinner>
                </TableRow>
                <TableRow style="@style/retreattableRow">

                    <TextView
                        style="@style/retreatTextName"
                        android:text="類別2"/>
                    <Spinner
                        android:id="@+id/sp_type2"
                        android:layout_weight="5.2"
                        style="@style/spinner">
                    </Spinner>
                </TableRow>
                <TableRow style="@style/retreattableRow">

                    <TextView
                        style="@style/retreatTextName"
                        android:text="類別3"/>
                    <Spinner
                        android:id="@+id/sp_type3"
                        android:layout_weight="5.2"
                        android:layout_height="wrap_content"
                        style="@style/spinner">
                    </Spinner>
                </TableRow>
                <TableRow style="@style/retreattableRow">

                    <TextView
                        style="@style/retreatTextName"
                        android:text="扣分"/>

                    <TextView
                        android:layout_weight="5.2"
                        android:id="@+id/tv_score"
                        style="@style/retreat_message"
                        />

                </TableRow>
            </TableLayout>
            <!--文字描述-->
            <EditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:textSize="@dimen/text_size_18"
                android:hint="請輸入異常描述"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <GridView
                    android:id="@+id/gv_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dimen_10"
                    android:horizontalSpacing="@dimen/dimen_2"
                    android:numColumns="4"
                    android:scrollbars="none"
                    android:verticalSpacing="@dimen/dimen_2" />

                <!--空白圖片佔位-->
                <ImageView
                    android:id="@+id/iv_empty"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_addpic_unfocused" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>