<?xml version="1.0" encoding="utf-8"?>
<!--安保部 常用表單-->
<!--掃描廠牌輸入工號-->
<!--健康追蹤-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_3">
    <!--標題-->
    <include layout="@layout/common_title" />
    <LinearLayout
        android:gravity="bottom|center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--        安保部-健康追蹤 時顯示-->
        <RadioGroup
            android:id="@+id/rg_check"
            style="@style/btn_input"
            android:layout_marginBottom="@dimen/dimen_50"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <RadioButton
                android:id="@+id/rtb_worker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="員工"/>
            <RadioButton
                android:id="@+id/rtb_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="廠商"/>

        </RadioGroup>

        <!--健康追蹤已有記錄查詢-->
        <Button
            android:id="@+id/btn_search"
            android:background="@drawable/button_selector"
            style="@style/btn_input"
            android:text="已有記錄查詢"
            android:visibility="gone"/>


        <!--二輪車違規登記表當日記錄查詢-->
        <Button
            android:id="@+id/btn_view"
            android:visibility="gone"
            android:background="@color/color_f5a306"
            android:layout_marginBottom="@dimen/dimen_50"
            android:layout_width="@dimen/dimen_150"
            android:layout_height="@dimen/dimen_50"
            android:text="當日記錄查詢" />
        <!--110接處警登記表-->
        <LinearLayout
            android:id="@+id/ll_110"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dimen_8"
                android:layout_marginRight="@dimen/dimen_8"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <Button
                    android:id="@+id/btn_jqtb"
                    android:text="警情通報"
                    android:layout_marginRight="@dimen/dimen_4"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="@dimen/dimen_18"
                    android:layout_height="wrap_content"/>
                <Button
                    android:layout_marginLeft="@dimen/dimen_4"
                    android:id="@+id/btn_cjfk"
                    android:layout_weight="1"
                    android:text="處警反饋"
                    android:textSize="@dimen/dimen_18"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <!--私家車車違規登記表-->
        <Button
            android:visibility="gone"
            android:id="@+id/btn_self"
            android:background="@drawable/button_selector"
            style="@style/btn_input"
            android:text="私家車" />
        <!--掃描進入-->
        <!--員工違規登記表-->
        <!--異常處置區 日常消殺點檢-->
        <Button
            android:id="@+id/btn_scan"
            android:background="@drawable/button_selector"
            style="@style/btn_input"
            android:text="掃描進入" />

        <!--手動錄入-->
        <!--員工進出異常登記表-->
        <!--體症異常追蹤-->
        <Button
            android:id="@+id/btn_write"
            android:background="@drawable/button_selector"
            style="@style/btn_input"
            android:text="手動錄入" />

        <!--文字識別-->
        <!--二輪車違規登記表-->
        <!--處置後消殺點檢-->
        <Button
            android:id="@+id/btn_ocr"
            android:background="@drawable/button_selector"
            android:layout_marginBottom="@dimen/dimen_150"
            style="@style/btn_input"
            android:text="文字識別" />

    </LinearLayout>
</LinearLayout>